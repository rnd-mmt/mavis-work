<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="purchase_requisition_employee_form_view" model="ir.ui.view">
            <field name="name">hr.employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                     <page name="purchase_settings" string="Purchase Requisition Settings">
                        <group>
                            <group>
                                <field name="dest_location_id"/>
                            </group>
                        </group>
                     </page>
                    <page string="Signature">
                        <separator string="Signature"/>
                        <field name="signature" widget="signature"/>
                    </page>
                </xpath>
            </field>
        </record>

<!--        RES USER-->
        <record id="view_users_form_sign_modif" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Signature">
                    <separator string="Signature"/>
                    <field name="signature" widget="signature"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_users_form_sign" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Signature">
                    <separator string="Signature"/>
                    <field name="signature" widget="signature"/>
                </page>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
