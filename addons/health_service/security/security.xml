<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_healthservice_usertype">
            <field name="name">Service santé</field>
            <field name="description">Choix du profil de l'utilisateur service santé</field>
            <field name="sequence">10</field>
        </record>

        <!--TYPE DE PROFIL-->
        <record id="group_healthservice_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_healthservice_usertype"/>
        </record>
        <record id="group_healthservice_lecture" model="res.groups">
            <field name="name">Lecture</field>
            <field name="category_id" ref="module_category_healthservice_usertype"/>
        </record>

        <record model="ir.rule" id="healthservice_comp_rule">
            <field name="name">Service santé multi-company</field>
            <field name="model_id" ref="model_acs_health_service"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

    </data>

</odoo>
