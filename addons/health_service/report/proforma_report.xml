<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_proforma_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="address">

                        <address t-field="o.invoice_to" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <div t-if="o.invoice_to.vat" class="mt16">
                            <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>: <span t-field="o.invoice_to.vat"/></div>
                </t>
                <div class="page">
                    <h2>
                        <span>Facture Proforma</span>
                    </h2>

                    <div id="informations" class="row mt-4 mb-4">
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.service_date" name="service_date">
                            <strong>Date:</strong>
                            <p class="m-0" t-field="o.service_date"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.patient_id" name="patient_id.name">
                            <strong>Patient:</strong>
                            <p class="m-0" t-field="o.patient_id.name"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_to" name="invoice_to.name">
                            <strong>Référence:</strong>
                            <p class="m-0" t-field="o.name"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.desc" name="desc">
                            <strong>Description:</strong>
                            <p class="m-0" t-field="o.desc"/>
                        </div>
                    </div>

                    <table class="table table-bordered table-sm o_main_table" name="health_service_line_table">
                        <thead>
                            <tr>
                                <th name="th_product" class="text-left"><span>Produit</span></th>
                                <th name="th_quantity" class="text-right"><span>Qté</span></th>
                                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>P.U.</span></th>
                                <th name="th_subtotal" class="text-right"><span>Total</span></th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="lines" t-value="o.service_line.sorted(key=lambda l: (-l.sequence,-l.id), reverse=True)"/>
                            <t t-foreach="lines" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td class="text-left"><span t-field="line.product.name" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.sale_price"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.amount_total" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="o.total_price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>

                    <img t-if="o.patient_id.code" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %('Code128',o.patient_id.code,180,50)" align="right"/>
                    <div>
                        <p t-field="o.notes"></p>
                    </div>
                </div>
            </t>
        </template>

        <template id="proforma_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_to.lang"/>
                    <t t-call="health_service.report_proforma_document" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
