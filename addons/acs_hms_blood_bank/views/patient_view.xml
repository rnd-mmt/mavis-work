<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_blood_bank_registered_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.view_patient_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="view_acs_blood_requisition" type="object" class="oe_stat_button" groups="acs_hms_blood_bank.group_blood_bank_user" icon="fa-heartbeat">
                    <field string="Blood Requisitions" name="acs_blood_requisition_count" widget="statinfo"/>
                </button>
                <button name="view_acs_blood_issuance" type="object" class="oe_stat_button" groups="acs_hms_blood_bank.group_blood_bank_user" icon="fa-heartbeat">
                    <field string="Blood Issuance" name="acs_blood_issuance_count" widget="statinfo"/>
                </button>
            </div>
            <field name="blood_group" position="after">
                <field name="is_receiver"/>
                <field name="is_donor"/>
            </field>
        </field>
    </record>

    <record id="patient_kanban_view" model="ir.ui.view">
        <field name="name">hms.patient.kanban</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.patient_kanban_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="acs_blood_requisition_count"/>
                <field name="acs_blood_issuance_count"/>
            </field>
            <xpath expr="//ul" position="inside">
                <li t-if="record.gender.raw_value">
                    <span class="badge" style="color:green !important;" t-if="record.acs_blood_requisition_count.value&gt;0"><i class="fa fa-heartbeat"/><t t-esc="record.acs_blood_requisition_count.value"/></span>
                    <span class="badge" style="color:red !important;" t-if="record.acs_blood_issuance_count.value&gt;0"><i class="fa fa-heartbeat"/><t t-esc="record.acs_blood_issuance_count.value"/></span>
                </li>
            </xpath>
        </field>
    </record>

    <record id="view_patient_filter" model="ir.ui.view">
        <field name="name">hms.patient.filter</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.view_patient_filter"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <filter string="Is Blood Donor" name="is_donor" domain="[('is_donor','=',1)]"/>
                <filter string="Is Blood Receiver" name="is_receiver" domain="[('is_receiver','=',1)]"/>
            </field>
        </field>
    </record>

    <record id="action_blood_donor" model="ir.actions.act_window">
        <field name="name">Blood Donor</field>
        <field name="res_model">hms.patient</field>
        <field name="context">{'search_default_is_donor': 1}</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Blood Donor.
            </p>
        </field>
    </record>

    <record id="action_blood_receiver" model="ir.actions.act_window">
        <field name="name">Blood Receiver</field>
        <field name="res_model">hms.patient</field>
        <field name="context">{'search_default_is_receiver': 1}</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Blood Receiver.
            </p>
        </field>
    </record>

</odoo>