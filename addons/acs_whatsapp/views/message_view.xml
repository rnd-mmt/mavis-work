<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="acs_whatsapp_search_view">
        <field name="name">whatsapp Search</field>
        <field name="model">acs.whatsapp.message</field>
        <field name="arch" type="xml">
            <search string="WhatsApp">
                <field name="partner_id"/>
                <field name="mobile"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="acs_whatsapp_tree">
        <field name="name">acs.whatsapp.message.tree</field>
        <field name="model">acs.whatsapp.message</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="mobile"/>
                <field name="message"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="acs_whatsapp_form">
        <field name="name">whatsapp.history.form</field>
        <field name="model">acs.whatsapp.message</field>
        <field name="arch" type="xml">
            <form string="WhatsApp">
                <header>
                    <button name="send_whatsapp_message" states="draft" type="object" string="Send" class="oe_highlight"/>
                    <button name="action_draft" states="error" type="object" string="Set to Draft" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="mobile"/>
                            <field name="template_id"/>
                            <field name="message_type"/>
                            <field name="message" attrs="{'invisible': [('message_type','!=','message')], 'required': [('message_type','=','message')]}"/>
                            <field name="file" filename="file_name" attrs="{'invisible': [('message_type','!=','file')], 'required': [('message_type','=','file')]}"/>
                            <field name="file_name" invisible="1"/>
                            <field name="link" attrs="{'invisible': [('message_type','!=','link')], 'required': [('message_type','=','link')]}"/>
                            <field name="file_url" attrs="{'invisible': [('message_type','!=','file_url')], 'required': [('message_type','=','file_url')]}"/>
                            <field name="mimetype" invisible="0"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                            <field name="reply_data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_acs_whatsapp_graph">
        <field name="name">acs.whatsapp.message.graph</field>
        <field name="model">acs.whatsapp.message</field>
        <field name="arch" type="xml">
            <graph string="WhatsApp">
                <field name="create_date"/>
            </graph>
        </field>
    </record>

    <record id="view_appointment_pivot" model="ir.ui.view">
        <field name="name">acs.whatsapp.message.pivot</field>
        <field name="model">acs.whatsapp.message</field>
        <field name="arch" type="xml">
            <pivot string="WhatsApp">
                <field name="create_date" type="row"/>
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_acs_whatsapp">
        <field name="name">WhatsApp</field>
        <field name="res_model">acs.whatsapp.message</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add new record.
            </p>
        </field>
    </record>

    <!-- whatsapp Template -->
    <record model="ir.ui.view" id="acs_whatsapp_template_search_view">
        <field name="name">WhatsApp Template Search</field>
        <field name="model">acs.whatsapp.template</field>
        <field name="arch" type="xml">
            <search string="WhatsApp Template">
                <field name="name"/>
                <field name="message"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="acs_whatsapp_template_tree">
        <field name="name">acs.whatsapp.template.tree</field>
        <field name="model">acs.whatsapp.template</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Template">
                <field name="name"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="acs_whatsapp_template_form">
        <field name="name">whatsapp.form</field>
        <field name="model">acs.whatsapp.template</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Template">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    <group>
                        <field name="message_type"/>
                        <field name="message" attrs="{'invisible': [('message_type','!=','message')], 'required': [('message_type','=','message')]}"/>
                        <field name="file" filename="file_name" attrs="{'invisible': [('message_type','!=','file')], 'required': [('message_type','=','file')]}"/>
                        <field name="file_name" invisible="1"/>
                        <field name="link" attrs="{'invisible': [('message_type','!=','link')], 'required': [('message_type','=','link')]}"/>
                        <field name="file_url" attrs="{'invisible': [('message_type','!=','file_url')], 'required': [('message_type','=','file_url')]}"/>

                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_acs_whatsapp_template">
        <field name="name">WhatsApp Template</field>
        <field name="res_model">acs.whatsapp.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add new record.
            </p>
        </field>
    </record>

</odoo>