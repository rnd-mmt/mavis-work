<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form_inherit_department" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.department</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Exemple : placer aprÃ¨s origin -->
            <xpath expr="//field[@name='origin']" position="after">
                <field name="department_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_tree_inherit_department" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.department</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="department_id"/>
            </xpath>
        </field>
    </record>
</odoo>