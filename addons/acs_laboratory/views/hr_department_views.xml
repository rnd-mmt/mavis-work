<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_department_form_inherit_source_location" model="ir.ui.view">
        <field name="name">hr.department.form.inherit.source.location</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="source_location_id" options="{'no_create': False}"/>
            </xpath>
        </field>
    </record>
</odoo>