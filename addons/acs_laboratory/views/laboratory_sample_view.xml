<?xml version="1.0"?>
<odoo>
    <!-- Laboratory Sample Type -->
    <record model="ir.ui.view" id="view_acs_laboratory_sample_type_tree">
        <field name="name">Laboratory Sample Type</field>
        <field name="model">acs.laboratory.sample.type</field>
        <field name="arch" type="xml">
            <tree string="Laboratory Sample Type" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <!-- <field name="product_id"/> -->
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="action_acs_laboratory_sample_type" model="ir.actions.act_window">
        <field name="name">Laboratory Sample Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.laboratory.sample.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Laboratory Sample Type.
            </p>
        </field>
    </record>
    <!-- Lab Sample -->
    <record model="ir.ui.view" id="acs_patient_laboratory_sample_form">
        <field name="name">Lab Sample</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="arch" type="xml">
            <form string="Lab Samples">
                <div class="alert alert-error text-center" role="alert" style="margin-bottom:0px; background-color:#f8b9b9;"  attrs="{'invisible': [('external_collect' ,'=' , False)]}">
                    <h2>PRELEVEMENT EXTERNE</h2>
                </div>
                <header>
                    <button name="action_collect" states="draft" string="Collected" class="oe_highlight" type="object"/>
                    <button name="action_examine" states="collect" string="Examined" type="object" class="oe_highlight"/>
                    <button name="action_cancel" states="collect" string="Cancel" type="object"/>
                    <button name="%(acs_laboratory.acs_lab_sample_report)d" states="collect" string="Print" type="action"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,collect,examine"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" icon="fa-truck"
                                name="show_picking" groups="base.group_user">
                            <field string="Bon de livraison"  name="picking_status" widget="statinfo" />
                        </button>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="request_id"/>
                            <field name="patient_id"/>
                            <field name="sample_type_id"/>
                            <field name="container_name"/>
                            <field name="external_collect" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="collection_center_id" invisible="1"/>
                            <field name="health_service_id"/>
                            <field name="file_patient"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="department_id"/>
                            <!-- <field name="department_id"
                                domain="[('id','in',context.get('allowed_department_ids', []))]"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="consumed_material" string="Consumed Material">
                            <group>
                                <group>
                                    <button name="consume_lab_material" string="Bon de livraison" groups="" type="object" class="oe_highlight"/>
                                </group>
                            </group>
                            <field name="consumable_line_ids" nolabel="1" colspan="4">
                                <tree string="Line" editable="top">
                                    <field name="product_id" expand="1" required="1" domain="[('tracking','=','none')]"/>
                                    <!-- <field name="lot_id" required="1"/> -->
                                    <field name="qty" required="1"/>
                                    <field name="product_uom" required="1"/>
                                    <field name="date" required="1"/>
                                    <field name="move_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="notes" placeholder="Notes" nolabel="1" colspan="4"/>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="acs_patient_laboratory_sample_tree">
        <field name="name">Lab Sample</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="arch" type="xml">
            <tree string="Lab Sample" decoration-info="state=='draft'" decoration-muted="state=='cancel'" decoration-danger="state=='collect'" name="sample_tree">
                <field name="name"/>
                <field name="file_patient"/>
                <field name="request_id"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>
    <record id="acs_patient_laboratory_sample_search" model="ir.ui.view">
        <field name="name">acs.patient.laboratory.sample.search</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="arch" type="xml">
            <search string="Lab Sample">
                <field name="patient_id"/>
                <field name="user_id"/>
                <field name="container_name"/>
                <filter name="collect" string="To Examine" domain="[('state','=','draft')]"/>
                <filter name="examined" string="Examined" domain="[('state','=','examine')]"/>
                <filter name="today" string="Today's Sample" domain="[('date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_patient_id" string="Patient" context="{'group_by':'patient_id'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by':'date'}"/>
                    <filter name="group_by_user" string="User" context="{'group_by':'user_id'}"/>
                    <filter name="group_by_company" string="Hospital" context="{'group_by':'company_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by':'state'}"/>
                    <filter name="group_by_sample_type" string="Sample Type" context="{'group_by':'sample_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="acs_patient_laboratory_sample_calendar" model="ir.ui.view">
        <field name="name">acs.patient.laboratory.sample.calendar</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Lab Sample" color="user_id" date_start="date">
                <field name="user_id"/>
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>
    <record id="acs_patient_laboratory_sample_pivot" model="ir.ui.view">
        <field name="name">acs.patient.laboratory.sample.pivot</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="arch" type="xml">
            <pivot string="Lab Sample">
                <field name="date" type="row"/>
                <field name="user_id" type="row"/>
                <field name="patient_id" type="row"/>
            </pivot>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_acs_patient_laboratory_sample">
        <field name="name">Lab Samples</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.patient.laboratory.sample</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Lab Sample.
            </p>
        </field>
    </record>
</odoo>