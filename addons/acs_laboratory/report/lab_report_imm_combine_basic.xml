    <record id="action_report_basic_lab_combine_imm" model="ir.actions.report">
        <field name="name">Rapprot de laboratoire Analyses combiné (basic template)</field>
        <field name="model">patient.laboratory.test</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_test_combine_document_basic</field>
        <field name="report_file">acs_laboratory.report_acs_lab_test_combine_document_basic</field>
        <field name="print_report_name">(object.name or 'LabReport').replace('/','_') + '_LabReport'</field>
        <field name="binding_model_id" ref="model_patient_laboratory_test"/>
        <field name="binding_type">report</field>
    </record>

</odoo>