<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sample_request_report">
        <t t-set="list_sample" t-value="lab.sudo().get_sample_type()"/>
        <div style="display: grid !important; grid-template-columns: repeat(4, auto) !important; gap: 0px !important;">
            <t t-foreach="list_sample" t-as="sample">
<!--                <div style="width:350px;float:left;margin:0;font-size:10px;margin-bottom:0px;border:0px solid #fff;transform: scale(.8);">-->
                 <div style="display: grid !important; grid-template-columns: repeat(4, auto) !important; gap: 0px !important;">
                    <span style="line-height:9px !important;" t-field="lab.name" />
                    <span style="line-height:9px !important;" t-field="lab.patient_id.name"/><br/>
                    <span style="line-height:9px !important;" t-field="lab.patient_id.birthday"/> (Age: <span style="line-height:9px !important;"  t-field="lab.patient_id.age"/> Sexe: <span  style="line-height:9px !important;" t-field="lab.patient_id.gender"/>)<br/>
                    <span style="line-height:9px !important;"  t-field="lab.date"/> / <span style="line-height:9px !important;" t-esc="sample"/><br/>
                    <img t-if="lab.name"  style="position: relative !important; left:-50px!important; display: inline !important; " t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %('Code128',lab.name,300,20)"/>
                </div>
            </t>
        </div>
    </template>

    <template id="report_barcode_sample_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <t t-call="acs_laboratory.sample_request_report">
                            <t t-set="lab" t-value="doc"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="acs_sample_request_report" model="ir.actions.report">
        <field name="name">Etiquette Ã©chantillon</field>
        <field name="model">acs.laboratory.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_barcode_sample_request</field>
        <field name="report_file">acs_laboratory.report_barcode_sample_request</field>
        <field name="binding_model_id" ref="model_acs_laboratory_request"/>
        <field name="binding_type">report</field>
    </record>

</odoo>