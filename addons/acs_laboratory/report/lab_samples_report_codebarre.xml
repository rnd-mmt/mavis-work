<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="lab_sample_report_barcode">
        <div style="width:350px;float:left;margin:0;font-size:15px;margin-bottom:0px;border:0px solid #fff;margin-left:10px;">
            <strong>Patient: </strong> <span t-field="lab.patient_id.name"/><br/>
            <strong>Birthdate: </strong> <span t-field="lab.patient_id.birthday"/> (Age: <span t-field="lab.patient_id.age"/> Sexe: <span t-field="lab.patient_id.gender"/>)<br/>
            <strong>Date: </strong> <span t-field="lab.date"/><br/>
            <img t-if="lab.request_id" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %('Code128',lab.request_id.name,350,70)" align="center"/>
        </div>
    </template>

    <template id="report_lab_barcode">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <t t-call="acs_laboratory.lab_sample_report_barcode">
                            <t t-set="lab" t-value="doc"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="acs_lab_sample_report_barcode" model="ir.actions.report">
        <field name="name">LAB Sample Code barre</field>
        <field name="model">acs.patient.laboratory.sample</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_lab_barcode</field>
        <field name="report_file">acs_laboratory.report_lab_barcode</field>
        <field name="binding_model_id" ref="model_acs_patient_laboratory_sample"/>
        <field name="binding_type">report</field>
    </record>

</odoo>