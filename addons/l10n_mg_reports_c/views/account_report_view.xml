<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="accounting_report_view_inherit" model="ir.ui.view">
      <field name="name">Accounting Report</field>
      <field name="inherit_id" ref="accounting_pdf_reports.accounting_report_view"/>
      <field name="model">accounting.report</field>
      <field name="arch" type="xml">
        <field name="date_to" position="after">
          <field name="type_financial_report_mg" attrs="{'invisible': True}"/>
        </field>
        <xpath expr="//field[@name='debit_credit']" position="replace">
          <field name="debit_credit"
                 attrs="{'invisible': ['|',('enable_filter','=',True),('type_financial_report_mg','=','balance_sheet')]}"/>
        </xpath>
        <xpath expr="//button[@name='check_report']" position="attributes">
          <attribute name="string">Print PDF</attribute>
        </xpath>
        <xpath expr="//footer//button[@name='check_report']" position="after">
          <button type="object" name="print_xlsx" string="Export Excel" class="oe_highlight"/>
        </xpath>
      </field>
    </record>
    <menuitem id="account.menu_finance_entries_accounting_miscellaneous" name="Miscellaneous" sequence="1"
              parent="account.menu_finance_entries">
      <menuitem id="account.menu_action_move_journal_line_form" action="account.action_move_journal_line"
                groups="account.group_account_readonly" sequence="1"/>
      <menuitem id="account.menu_action_account_moves_all" action="account.action_account_moves_all"
                groups="account.group_account_readonly" sequence="10"/>
    </menuitem>
  </data>
</odoo>