<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inter_company_transfer_ept_pickings_form_view" model="ir.ui.view">
        <field name="name">inter.company.transfer.ept.pickings.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="backorder_id" position="after">
                <field name="inter_company_transfer_id" readonly="1"
                       attrs="{'invisible':[('inter_company_transfer_id','=',False)]}"/>
            </field>
        </field>
    </record>

    <record id="inter_company_transfer_ept_pickings_tree_view" model="ir.ui.view">
        <field name="name">inter.company.transfer.ept.pickings.tree.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="origin" position="before">
                <field name="inter_company_transfer_id" string="ICT" optional="show"/>
            </field>
        </field>
    </record>

    <record id="inter_company_transfer_ept_picking_search_view" model="ir.ui.view">
        <field name="name">inter.company.transfer.ept.picking.search.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field name="inter_company_transfer_id"/>
            </field>
            <xpath expr="//filter[@name='starred']" position="after">
                <filter string="ICT Pickings" name="inter_company_transfer_id"
                        domain="[('inter_company_transfer_id','!=', False)]"/>
            </xpath>
        </field>
    </record>

    <template id="stock_picking_report_inherit" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[@name='stock_move_table']" position="before">
            <div id="informations" class="row mt-4 mb-4">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.inter_company_transfer_id">
                    <strong>ICT:</strong>
                    <span class="m-0" t-field="o.inter_company_transfer_id"/>
                </div>
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.location_dest_id">
                    <strong>Destination:</strong>
                    <span class="m-0" t-field="o.location_dest_id"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
