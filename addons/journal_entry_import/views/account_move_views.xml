<odoo>
  <data>

    <record id="group_journal_item_admin" model="res.groups">
      <field name="name">Journal Item Admin</field>
      <field name="category_id" ref="base.module_category_accounting_accounting"/>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="view_move_line_form_inherit" model="ir.ui.view">
      <field name="name">account.move.line.form</field>
      <field name="inherit_id" ref="account.view_move_line_form"/>
      <field name="model">account.move.line</field>
      <field name="arch" type="xml">
        <field name="partner_id" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
        </field>
        <field name="account_id" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
        </field>
        <field name="debit" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
        </field>
        <field name="credit" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
        </field>
        <field name="move_id" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
          <attribute name="domain">[('state', '=', 'draft')]</attribute>
        </field>
        <field name="analytic_account_id" position="attributes">
          <attribute name="readonly">0</attribute>
          <attribute name="attrs">{'readonly': [('parent_state', 'in', ('posted', 'cancel'))]}</attribute>
        </field>
      </field>
    </record>


    <record id="view_move_line_tree_inherit" model="ir.ui.view">
      <field name="name">account.move.line.tree</field>
      <field name="inherit_id" ref="account.view_move_line_tree"/>
      <field name="groups_id" eval="[(4, ref('journal_entry_import.group_journal_item_admin'))]"/>
      <field name="model">account.move.line</field>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="attributes">
          <attribute name="create">1</attribute>
          <attribute name="edit">1</attribute>
        </xpath>
      </field>
    </record>

  </data>
</odoo>