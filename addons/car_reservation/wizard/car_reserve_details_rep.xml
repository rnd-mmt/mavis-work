<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Download wizard's form view for Car Reservation details report -->
    <record id="wiz_reserve_details_download_wiz" model="ir.ui.view">
        <field name="name">Car Reservation Report Download File</field>
        <field name="model">wiz.download.reserve.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export File">
                <group>
                    <field name="name" invisible="1" />
                    <h4>
                        Click On Link To Download Xls File: &#160;
                        <field name="file" filename="name" nolabel="1" />
                    </h4>
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Print report of Car Reservation details wizard form view -->
    <record id="wiz_reserve_details_report_view" model="ir.ui.view">
        <field name="name">Car Reservation Details Report</field>
        <field name="model">wiz.car.reserve.details.export</field>
        <field name="arch" type="xml">
            <form string="Car Reservation details Report">
                <group>
                    <group>
                        <field name="date_from" required="1" />
                    </group>
                    <group>
                        <field name="date_to" required="1" />
                    </group>
                </group>
                <separator string="Vehicles" name="Vehicles" />
                <field name="vehicle_ids" nolabel="1" />
                <footer>
                    <button
                        name="print_report"
                        string="Print"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>   

    <!-- Adding wizard of Car Reservation details report in Actions Toolbar-->
    <record id="wiz_reserve_details_report" model="ir.actions.act_window">
        <field name="name">Car Reservation details</field>
        <field name="res_model">wiz.car.reserve.details.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu item of Reservation Location -->
    <menuitem
        action="wiz_reserve_details_report"
        id="menu_car_reservation_details_report"
        name="Car Reservation Details"
        parent="fleet.menu_fleet_reporting"/>

    <!-- Adding wizard of Car Reservation details report in Actions Toolbar-->
    <record id="wiz_reserve_details_report_window" model="ir.actions.act_window">
        <field name="name">Car Reservation details</field>
        <field name="res_model">wiz.car.reserve.details.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id"
            ref="car_reservation.model_car_reservation"/>
        <field name="view_id"
            ref="wiz_reserve_details_report_view"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>

