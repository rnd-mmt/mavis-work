<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- See Own Department Patients -->
        <record id="hms_patient_department_rule" model="ir.rule">
            <field name="name">Departments Patients for lab</field>
            <field name="model_id" ref="acs_hms_base.model_hms_patient"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', '|',('user_id.id','=',user.id), ('department_ids', 'in', [dep.id for dep in user.department_ids]),('department_ids', '=', False)]</field>
            <field name="groups" eval="[(4, ref('acs_laboratory.group_hms_lab_user'))]"/>
        </record>

        <!-- Lab Req Rules-->
        <record id="acs_laboratory.all_hms_laboratory_request_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_hms.group_hms_jr_doctor'))]"/>
        </record>

        <!-- Lab Result Rules-->
        <record id="acs_laboratory.all_patient_laboratory_test_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_hms.group_hms_jr_doctor'))]"/>
        </record>

        <record id="acs_laboratory.all_hms_laboratory_request_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_laboratory.group_hms_lab_smi_resp'))]"/>
        </record>

        <record id="acs_laboratory.all_patient_laboratory_test_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_laboratory.group_hms_lab_smi_resp'))]"/>
        </record>

    </data>
</odoo>
