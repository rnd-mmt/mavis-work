<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Invoice Views -->
    <record id="view_move_coprest_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="coprest_commissions" string="Commission prestataire" groups="commission_prestataire.group_coprest_user">
                    <group name="coprest_commission_grp">
                        <group>
                            <field name='coprest_type' attrs="{'readonly':[('coprest_created', '=', True)]}"/>
                            <field name='coprest_on' attrs="{'readonly':[('coprest_created', '=', True)], 'invisible':[('coprest_type', '=', 'automatic')]}"/>
                            <field name='coprest_created' invisible="0"/>
                        </group>
                        <group>
                            <button name="update_coprest_values" string="Mettre Ã  jour" type="object" attrs="{'invisible':[('coprest_created', '=', True)]}"/>
                            <button name="finalize_coprest" string="Valider la commission" type="object" attrs="{'invisible':[('coprest_created', '=', True)]}"/>
                        </group>
                    </group>

                    <group>
                        <field name="coprest_partner_ids" widget="many2many_tags" attrs="{'readonly':[('coprest_created', '=', True)]}"/>
                    </group>

                    <field name="coprest_ids"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>