<?xml version="1.0"?>
<odoo>

    <!-- Include the Surgery page into the Patient History -->
    <record model="ir.ui.view" id="hms_patient_view">
        <field name="name">Patient</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms.view_patient_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_surgery" type="object" class="oe_stat_button" icon="fa-bed" groups="acs_hms_surgery.group_acs_hms_surgery_user">
                    <field string="Surgery" name="surgery_count" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//notebook/page[@name='diseases']" position="after">
                <page name="surgery" string="Surgerys" groups="acs_hms_surgery.group_acs_hms_surgery_user,acs_hms.group_hms_doctor_smi">
                    <group string="Antécédent chirurgicaux extérieurs">
                        <field name="past_surgeries_ids" colspan="4" nolabel="1" groups="acs_hms_surgery.group_acs_hms_surgery_user,acs_hms.group_hms_doctor_smi">
                            <tree editable="top">
                                <field name="date"/>
                                <field name="description"/>
                                <field name="complication"/>
                                <field name="result"/>
                                <field name="hosp_or_doctor"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Antécédents chirurgicaux">
                        <field name="past_surg_interne_ids" colspan="4" nolabel="1" groups="acs_hms_surgery.group_acs_hms_surgery_user,acs_hms.group_hms_doctor_smi">
                            <tree editable="top">
                                <field name="start_date"/>
                                <field name="name"/>
                                <field name="surgery_name"/>
                                <field name="diseases_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_physician_form" model="ir.ui.view">
        <field name="name">physician.form</field>
        <field name="model">hms.physician</field>
        <field name="inherit_id" ref="acs_hms_base.view_physician_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_surgery_physician" type="object" groups="acs_hms.group_hms_jr_doctor" class="oe_stat_button" icon="fa-bed">
                    <field string="Surgery" name="surgery_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

</odoo>