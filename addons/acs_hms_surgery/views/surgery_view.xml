<?xml version="1.0" ?>
<odoo>
    <!-- Surgery Template -->
    <record model="ir.ui.view" id="hms_surgery_template_view">
        <field name="name">Surgery Template</field>
        <field name="model">hms.surgery.template</field>
        <field name="arch" type="xml">
            <form string="Surgery">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surgery_name" required="1"/>
                            <field name="diseases_id"/>
                        </group>
                        <group>
                            <field name="surgery_product_id" domain="[('hospital_product_type','in',['surgery','radio_int'])]" context="{'default_hospital_product_type':'surgery'}"/>
                        </group>
                    </group>
                    <notebook groups="acs_hms.group_hms_nurse">
                        <page name="surgery" string="Surgery">
                            <group name="consumables" string="Consumables">
                                <field name="consumable_line_ids" nolabel="1" colspan="4">
                                    <tree string="Line" editable="top">
                                        <field name="product_id" expand="1" required="1" domain="[('tracking','=','none')]"/>
                                        <field name="product_uom" required="1"/>
                                        <field name="qty" required="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group name="medication_plan" string="Medication Plan">
                                <field name="medicament_line_ids" nolabel="1" colspan="4" >
                                <tree string="Line" editable="top">
                                    <field name="product_id" expand="1" required="1"/>
                                    <field name="active_component_ids" widget="many2many_tags"/>
                                    <field name="form_id"/>
                                    <field name="dose"/>
                                    <field name="medicine_uom_id" required="1" string="Dosage Unit"/>
                                    <field name="common_dosage_id"/>
                                    <field name="qty" required="1" string="Units"/>
                                    <field name="instruction"/>
                                </tree>
                                </field>
                            </group>
                            <group string="Special Precautions"/>
                                <field name="special_precautions" colspan='4'/>
                            <group string="Extra Info"/>
                            <field name="extra_info" colspan='4'/>
                    
                        </page>
                        <page name="discharge_summary" string="Discharge Summary">
                            <group string="Diagnosis"/>
                                <field name="diagnosis" colspan="4"/>
                            <group string="Clinincal History"/>
                                <field name="clinincal_history" colspan="4"/>
                            <group string="Examination"/>
                                <field name="examination" colspan="4"/>
                            <group string="Investigations"/>
                                <field name="investigation" colspan="4"/>
                            <group string="Advise on Discharge"/>
                            <field name="adv_on_dis" colspan="4"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hms_surgery_template_tree">
        <field name="name">Surgery Template</field>
        <field name="model">hms.surgery.template</field>
        <field name="arch" type="xml">
            <tree string='Surgery'>
                <field name="name"/>
                <field name="surgery_name"/>
                <field name="diseases_id"/>
            </tree>
        </field>
    </record>

    <record id="hms_surgery_template_filter" model="ir.ui.view">
        <field name="name">Surgery Filter</field>
        <field name="model">hms.surgery.template</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Surgery Template">
                <field name="name"/>
                <field name="surgery_name"/>
                <field name="surgery_product_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_disease" string="Disease" context="{'group_by':'diseases_id'}"/>
                    <filter name="group_by_surgery_poduct" string="Surgery Product" context="{'group_by':'surgery_product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_action_form_surgery_template">
        <field name="name">Surgery Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.surgery.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hms_surgery_template_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new Surgery Template.
            </p>
        </field>
    </record>

    <!-- Surgery Template -->
    <record model="ir.ui.view" id="hms_surgery_view">
        <field name="name">Surgery</field>
        <field name="model">hms.surgery</field>
        <field name="arch" type="xml">
            <form string="Surgery">
                <header>
                    <button name="action_confirm" string="Confirm" class="oe_highlight" type="object" states="draft" groups="acs_hms.group_hms_jr_doctor"/>
                    <button name="action_done" string="Done" states="confirm" type="object" class="oe_highlight" groups="acs_hms.group_hms_jr_doctor"/>
                    <button name="action_cancel" string="Cancel" states="confirm" type="object" class="oe_highlight"  groups="acs_hms.group_hms_jr_doctor"/>
                    <button name="action_draft" string="Draft" states="cancel" type="object" class="oe_highlight"  groups="acs_hms.group_hms_jr_doctor"/>
                    <button name="generate_service" string="Créer un Service santé" type="object" class="oe_highlight"  groups="acs_hms.group_hms_jr_doctor"
                        confirm="Voulez vous créer un service santé ?" attrs="{'invisible': ['|', ('check_btn_service', '=', True), ('state', 'in', ['draft', 'cancel','done'])]}"/>
<!--                    <button name="action_create_invoice" string="Create Invoice" groups="account.group_account_invoice" attrs="{'invisible': [('invoice_id','!=',False)]}" type="object" class="oe_highlight"/>-->

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="patient_id" required="1"/>
                            <field name="diseases_id" required="1"/>
                            <field name="surgery_name" required="1"/>
                        </group>
                        <group>
                            <label for="start_date" string="Surgery Date"/>
                            <div>
                                <field name="start_date" class="oe_inline" required="1"/>To
                                -
                                <field name="end_date" class="oe_inline"/>
                            </div>
                            <field name="invoice_id" groups="account.group_account_invoice"/>
                        </group>
                    </group>
                    <notebook groups="acs_hms.group_hms_nurse">
                        <page string="General Information" name="general">
                            <group>
                                <group string="Template Details">
                                    <field name="surgery_template_id"/>
                                    <field name="surgery_product_id" domain="[('hospital_product_type','in',['surgery','radio_int'])]" context="{'default_hospital_product_type':'surgery'}"/>
                                </group>
                                <group string="Surgeon Details">
                                    <field name="primary_physician" required="1"/>
                                    <field name="primary_physician_ids" widget="many2many_tags"
                                        domain="[('is_primary_surgeon', '=', True)]"/>
                                    <field name="assisting_surgeons" widget="many2many_tags"/>
                                </group>
                            </group>
                            <group>
                                <group string="Anesthesia Details">
                                    <field name="anesthetist_id" widget="many2many_tags"/>
                                    <field name="anesthesia_id" widget="many2many_tags"/>
                                </group>
                                <group string="Other Details">
                                    <field name="scrub_nurse" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        <page name="pre_operative_checklist" string="Pre Operative Checklist" groups="acs_hms.group_hms_nurse,acs_hms.group_hms_medical_officer">
                            <div class="oe_right mt16" name="check_progress">
                                <field name="pre_operative_checklist_done" widget="percentpie" string="Checked"/>
                            </div>
                            <field name="pre_operative_checklist_ids">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="is_done"/>
                                    <field name="remark"/>
                                </tree>
                            </field>
                        </page>
                        <page name="medication" string="Medication">
                            <group string="Consumables">
                                <field name="consumable_line_ids" nolabel="1" colspan="4">
                                    <tree string="Line" editable="top">
                                        <field name="product_id" expand="1" required="1" domain="[('tracking','=','none'),('hospital_product_type', '=', 'medicament')]" context="{'default_hospital_product_type':'medicament'}"/>
                                        <field name="product_uom" required="1"/>
                                        <field name="qty" required="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Medication Plan">
                                <field name="medicament_line_ids" nolabel="1" colspan="4" >
                                <tree string="Line" editable="top">
                                    <field name="product_id" expand="1" required="1"/>
                                    <field name="active_component_ids" widget="many2many_tags"/>
                                    <field name="form_id"/>
                                    <field name="dose"/>
                                    <field name="medicine_uom_id" required="1" string="Dosage Unit"/>
                                    <field name="common_dosage_id"/>
                                    <field name="qty" required="1" string="Units"/>
                                    <field name="instruction"/>
                                </tree>
                                </field>
                            </group>
                            <group string="Special Precautions"/>
                                <field name="special_precautions" colspan='4'/>
                            <group string="Extra Info"/>
                            <field name="extra_info" colspan='4'/>
                        </page>
                        <page name="post_oprative" string="Post-Operative Orders" groups="acs_hms.group_hms_medical_officer,acs_hms.group_hms_doctor">
<!--                            <group string="General Instruction">-->
<!--                                <field name="post_instruction" nolabel="1" colspan="4"/>-->
<!--                            </group>-->
                            <group string="Indications">
                                <field name="special_precautions" nolabel="1" colspan="4"/>
                            </group>
                            <group string="Intervention">
                                <field name="intervention" nolabel="1" colspan="4"/>
                            </group>
                            <group string="Compte rendu">
                                <field name="compte_rendu" nolabel="1" colspan="4"/>
                            </group>
                            <group string="Soins post-opératoires">
                                <field name="soins_postop" nolabel="1" colspan="4"/>
                            </group>
                        </page>
                        <page name="discharge_summary" string="Discharge Summary" groups="acs_hms.group_hms_medical_officer">
                            <group string="Diagnosis"/>
                                <field name="diagnosis" colspan="4"/>
                            <group string="Clinincal History"/>
                                <field name="clinincal_history" colspan="4"/>
                            <group string="Examination"/>
                                <field name="examination" colspan="4"/>
                            <group string="Investigations"/>
                                <field name="investigation" colspan="4"/>
                            <group string="Advise on Discharge"/>
                            <field name="adv_on_dis" colspan="4"/>
                        </page>
                    </notebook>
                    <field name="notes" colspan="4" placeholder="Operative Notes"/>
                    <field name="check_btn_service" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_acs_hospitalization_filter" model="ir.ui.view">
        <field name="name">Surgery</field>
        <field name="model">hms.surgery</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Surgery">
                <field name="patient_id"/>
                <field name="name"/>
                <field name="surgery_name"/>
                <field name="primary_physician"/>
                <field name="assisting_surgeons"/>
                <field name="scrub_nurse"/>
                <field name="anesthetist_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirm')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_anesthesia" string="Anesthesia" context="{'group_by':'anesthesia_id'}"/>
                    <filter name="group_by_surgery_poduct" string="Surgery Product" context="{'group_by':'surgery_product_id'}"/>
                    <filter string="Patient" name="patient_groupby" domain="[]" context="{'group_by':'patient_id'}"/>
                    <filter string="State" name="state_groupby" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Disease" name="disease_groupby" domain="[]" context="{'group_by':'diseases_id'}"/>
                </group>
            </search>
        </field>
    </record>
    

    <record model="ir.ui.view" id="hms_surgery_tree">
        <field name="name">Surgery Lists</field>
        <field name="model">hms.surgery</field>
        <field name="arch" type="xml">
            <tree string='Surgery'>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="surgery_name"/>
                <field name="age"/>
                <field name="start_date"/>
                <field name="diseases_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_action_form_surgery">
        <field name="name">Surgery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.surgery</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hms_surgery_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new Surgery.
            </p>
        </field>
    </record>

</odoo>