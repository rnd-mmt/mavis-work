<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- See Own Department Patients -->
        <record id="hms_patient_department_rule" model="ir.rule">
            <field name="name">Departments Patients for Imaging</field>
            <field name="model_id" ref="acs_hms_base.model_hms_patient"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', '|',('user_id.id','=',user.id), ('department_ids', 'in', [dep.id for dep in user.department_ids]),('department_ids', '=', False)]</field>
            <field name="groups" eval="[(4, ref('acs_imaging.group_hms_imaging_user'))]"/>
        </record>

        <!-- Imaging Req Rules-->
        <record id="acs_imaging.all_hms_imaging_request_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_hms.group_hms_jr_doctor'))]"/>
        </record>

        <!-- Imaging Result Rules-->
        <record id="acs_imaging.all_patient_imaging_test_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_hms.group_hms_jr_doctor'))]"/>
        </record>

        <record id="acs_imaging.all_hms_imaging_request_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_imaging.group_hms_imaging_resp_admin'))]"/>
        </record>
        <record id="acs_imaging.all_patient_imaging_test_rule" model="ir.rule">
            <field name="groups" eval="[(4, ref('acs_imaging.group_hms_imaging_resp_admin'))]"/>
        </record>

    </data>
</odoo>
