<?xml version="1.0"?>
<odoo>

    <!--Patient Test Results-->
    <record model="ir.ui.view" id="patient_imaging_test_view">
        <field name="name">Imaging Test</field>
        <field name="model">patient.imaging.test</field>
        <field name="inherit_id" ref="acs_imaging.patient_imaging_test_view"/>
        <field name="arch" type="xml">
            <field name="physician_id" position="after">
                <field name="appointment_id" domain="[('patient_id','=',patient_id)]"/>
            </field>
            <field name="date_analysis" position="after">
                <field name="hospitalization_id" domain="[('patient_id','=',patient_id)]"/>
                <field name="print_in_discharge" attrs="{'invisible': [('hospitalization_id', '=', False)]}"/>
            </field>
        </field>
    </record>

    <!--Patient Imaging Results-->
    <record model="ir.ui.view" id="patient_imaging_test_request_form">
        <field name="name">Test Requests</field>
        <field name="model">acs.imaging.request</field>
        <field name="inherit_id" ref="acs_imaging.patient_imaging_test_request_form"/>
        <field name="arch" type="xml">
            <!--field name="imaging_bill_id" position="before"-->
            <field name="no_invoice" position="before">
                <field name="hospitalization_id" domain="[('patient_id','=',patient_id)]"/>
                <field name="appointment_id" domain="[('patient_id','=',patient_id)]"/>
                <field name="treatment_id" domain="[('patient_id','=',patient_id)]"/>
            </field>
        </field>
    </record>

</odoo>