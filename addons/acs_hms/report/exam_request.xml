<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_acs_examrequest_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>

                <div class="row mb32 mt32">
                    <div class="col-12 text-center">
                        <h3>
                            <strong>
<!--                                <span>Appointment: </span>-->
<!--                                <span t-field="doc.name"/>-->
                                    <span>Demande d'examen</span>
                            </strong>
                        </h3>
                    </div>
                </div>

                <table class="table" style="border-bottom: 1px solid black;">
                    <tr>
                        <td style="width:50%;border: none;">
                            <strong>Patient: <span t-field="doc.patient_id.name"/></strong>
                        </td>
                        <td style="width:50%;border: none;">
                            <strong>Date. : <span t-field="doc.date" /></strong>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:50%;border: none;">
                            <strong>Age: <span t-field="doc.age"/></strong>
                        </td>
                        <td style="width:50%;border: none;">
                            <strong>Sexe : <span t-field="doc.patient_id.gender" /></strong>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:50%;border: none;">
                            <strong>Médecin: <span t-field="doc.sudo().physician_id.name" /></strong>
                        </td>
                        <td style="width:50%;border: none;">
                            <strong>Statut: <span t-field="doc.niveau_exam" /></strong>
                        </td>
                    </tr>
                </table>

                <p>Faire s'il vous plaît: </p>

                <strong><pre><span t-field="doc.exam" /></pre></strong>
                <br/><br/><br/>
                <p><u>Renseignements cliniques: </u><br/>
                <span t-raw="doc.clinic_info"/></p>

                Si vous avez des questions, veuillez nous contacter à votre convenance.<br/>
                <br/>
                Confraternellement,<br/>
                <div class="oe_structure"/>
                <p style="page-break-before:always;"> </p>
            </div>
        </t>
    </template>

    <template id="report_acs_examrequest">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_hms.report_acs_examrequest_document" t-lang="doc.patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_examrequest_report" model="ir.actions.report">
        <field name="name">Demande d'examen</field>
        <field name="model">hms.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_hms.report_acs_examrequest</field>
        <field name="report_file">acs_hms.report_acs_examrequest</field>
        <field name="print_report_name">("Demande d'examen").replace('/','_')</field>
        <field name="binding_model_id" ref="model_hms_appointment"/>
        <field name="binding_type">report</field>
    </record>

</odoo>