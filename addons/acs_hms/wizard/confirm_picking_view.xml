<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_confirmation_form" model="ir.ui.view">
        <field name="name">move.confirmation.wizard.form</field>
        <field name="model">move.confirmation.wizard</field>
        <field name="arch" type="xml">
<!--            <div class="alert alert-info">-->
<!--                <span>En appuyant sur le bouton <b>"Confirmer transfert"</b>, vous créerez un transfert de médicaments pour les quantités insuffisantes en sortie.</span>-->
<!--            </div>-->
            <form string="Confirm Moves">
                <div class="alert alert-info">
                    <span>En appuyant sur le bouton <b>"Confirmer transfert"</b>, vous créerez un transfert de médicaments pour les quantités insuffisantes en sortie.</span>
                </div>
<!--                <span t-esc="line_ids"/>-->
                <group>
                    <field name="line_ids" string="Transfert">
                        <tree editable="bottom">
                            <field name="product_id" string="Produit"/>
                            <field name="product_uom_qty" string="Quantité demandée" force_save="1"/>
                            <field name="product_uom" string="Unité" readonly="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Confirmer le transfert" type="object" name="confirm_moves" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_move_confirmation" model="ir.actions.act_window">
        <field name="name">Confirm picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">move.confirmation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>