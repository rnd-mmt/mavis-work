<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="acs_imaging_req_email" model="mail.template">
            <field name="name">Imaging Request</field>
            <field name="email_from">${ user.email|safe}</field>
            <field name="email_to">${object.imaging_id.email|safe}</field>
            <field name="subject">Imaging Test Request: ${object.name|safe}</field>
            <field name="model_id" ref="acs_imaging.model_acs_imaging_request"/>
            <field name="report_template" ref="acs_imaging.action_report_acs_imaging_prescription"/>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.imaging_id.lang}</field>
            <field name="body_html" type="html">
<div style="padding:0px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <p>Hello ${object.imaging_id.name},</p><br/>
    <p>We will like to perform imaging tests requested in the attached document in your institution and revert-us back on this mail with findings.</p><br/>
    <ul>
        <li>
            <p>Reference Number: ${object.name}</p><br/>
        </li>
        % if object.patient_id:
        <li>
            <p>Patient: ${object.patient_id.name|safe}</p><br/>
        </li>
        % endif
        % if object.physician_id:
        <li>
            <p>Prescribed By: ${object.physician_id.name|safe}</p><br/>
        </li>
        % endif
        <li>
            <p>Prescription Date: ${object.date.date()}</p><br/>
        </li>
    </ul>

    <p>Please feel free to call anytime for further information or any query.</p>

    <p>Best regards.</p><br/>
</div>
                </field>
        </record>
        
    </data>
</odoo>
