<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="img_report_document">
        <t t-call="web.external_layout_imaging_imm">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>
            <p>
                <strong style="color: #44546A;">NOM:  </strong><span t-field="doc.patient_id.name"/><br/>
                <strong style="color: #44546A;">DATE DE NAISSANCE:  </strong><span t-field="doc.patient_id.birthday"/><br/>
                <strong style="color: #44546A;">AGE:  </strong><span t-field="doc.patient_id.age"/><br/>
                <strong style="color: #44546A;">DATE D'EXAMEN:  </strong><span t-field="doc.date_analysis"/><br/>
                <strong style="color: #44546A;">RENSEIGNEMENT CLINIQUE:  </strong><span t-field="doc.clinic_info"/><br/>
                <strong style="color: #44546A;">N° DE DOSSIER:  </strong><span t-field="doc.name"/>
            </p>
            <t t-if="doc.device.name">
                <!-- <p t-if="doc.device.name" class="text-center">DESCRIPTION DE L’APPAREIL</p> -->
                <hr style="border-top: 2px dashed; width: 400px; margin-left: 200px;"/>
                <p>
                    <strong t-if="doc.device.name"><u>Appareil:  </u></strong><span t-field="doc.device.name"/><br/>
                    <strong t-if="doc.device_firt_using"><u>Première mise en service:  </u></strong><span t-field="doc.device_firt_using"/><br/>
                    <strong t-if="doc.instruction.name"><u>Technique d'acquisition:  </u></strong><span t-field="doc.instruction.name"/><br/>
                    <strong t-if="doc.sonde"><u>Sonde:  </u></strong><br/>
                    
                        <ul t-if="doc.sonde">
                            <t t-foreach="doc.sonde" t-as="line">
                                <li><t t-esc="line.name"/></li>
                            </t>
                        </ul>
                    
                    <strong t-if="doc.pdl_t != 0"><u>PDL T:  </u></strong><span t-if="doc.pdl_t != 0" t-field="doc.pdl_t"/> <span t-if="doc.pdl_t != 0"> mGy*cm </span>
                </p>
                <hr style="border-top: 2px dashed; width: 400px; margin-left: 200px;"/>
            </t>            
            
            <div class="interpretation-imaging">
              <span t-field="doc.interpretation"/>
            </div>
            <style>
              .interpretation-imaging p, 
              .interpretation-imaging span, 
              .interpretation-imaging i, 
              .interpretation-imaging b, 
              .interpretation-imaging strong {
                font-size: clamp(0.58em, 1em, 1em) !important;
              }
              
              .interpretation-imaging div {
                margin: 0 !important;
              }
              
              .interpretation-imaging p {
                margin-bottom: 0;
                line-height: unset !important;
                letter-spacing: unset !important;
              }
              
              .interpretation-imaging table {
                width: auto !important;
                border-spacing: 0 !important;
                border: none !important;
                border-collapse: collapse;
                margin-left: 0 !important;
              }
              
              .interpretation-imaging tr[style] {
                border: none !important;
                border-left: unset !important;
                border-right: unset !important;
                border-top: unset !important;
                border-bottom: unset !important;
                border: 1px solid !important;
              }
              
              .interpretation-imaging td[style],
              .interpretation-imaging th[style] {
                vertical-align: middle !important;
                box-sizing: border-box;
                border-left: unset !important;
                border-right: unset !important;
                border-top: unset !important;
                border-bottom: unset !important;
                border: 1px solid !important;
              }
              
              
            </style>

            <!-- <span t-field="doc.interpretation"/> -->

            <p t-if="doc.test_id.test_type == 'MR'" style="padding-top:20px; font-style: italic !important; font-family: Arial, sans-serif !important">

              <span> « Cette traduction en français a été réalisée par une intelligence artificielle. »</span>
            </p>

            <div class="row">
                <div class="col-3"></div>
                <div class="col-3"></div>
                <div class="col-2 pull-left">
                    <!-- <strong t-if="doc.resp_interpretation != doc.resp_relecture"><span t-field="doc.resp_interpretation"/></strong>
                    <br/>
                    <t t-if="doc.resp_interpretation != doc.resp_relecture and doc.resp_interpretation.signature">
                      <div class="signature">
                          <span t-field="doc.resp_interpretation.signature" t-options="{'widget': 'image'}"/>
                      </div>
                        
                    </t> -->
                </div>
                <div  class="col-4 pull-right">
                  <t t-if="doc.test_id.test_type != 'MR'">
                    <strong><span t-field="doc.resp_relecture"/></strong>
                    <br/>
                    <span t-if="doc.resp_relecture and doc.resp_relecture.signature and doc.state in ['relu', 'done', 'deliver', 'verified']" t-field="doc.resp_relecture.signature" t-options="{'widget': 'image', 'class': 'img-rounded', 'style':'max-height: 100px !important'}"/>
                    <br/>
                    <span style="font-size:9px;">"Validé et signé électroniquement"</span>
                  </t>
                </div>
                <style>
                          .signature img {
                            z-index: -999 !important;
                            height: auto !important;
                            object-fit: center !important;
                          }
                          
                          .signature::before {
                            content:"";
                            height: 100%;
                            width: 30% !important;
                            background-color: #ffffff;
                            position: absolute; 
                            left: 0;
                            top: 20px !important;
                            z-index: 999 !important;
                          }
                          
                          .signature::after {
                            content:"";
                            height: 100%;
                            width: 30% !important;
                            background-color: #ffffff;
                            position: absolute; 
                            right: 0;
                            top: 20px !important;
                            z-index: 999 !important;
                          }
                </style>
            </div>
        </t>
    </template>

    <template id="img_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_imaging.img_report_document" t-lang="doc.patient_id.lang"/>
            </t>
        </t>
    </template>

    <record id="img_result_report_id" model="ir.actions.report">
        <field name="name">Compte rendu IMM</field>
        <field name="model">patient.imaging.test</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_imaging.img_report</field>
        <field name="report_file">acs_imaging.img_report</field>
        <field name="print_report_name">(object.name or 'ImagingReport').replace('/','_')</field>
        <field name="binding_model_id" ref="model_patient_imaging_test"/>
<!--        <field name="groups_id" eval="[(4, ref('acs_hms.group_hms_receptionist'))]"/>-->
        <field name="binding_type">report</field>
    </record>

</odoo>